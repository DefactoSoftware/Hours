!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "noindex, nofollow", :name => "robots"}/
    %title= [("HSD"), t("titles.application")].compact.uniq.join(" | ")
    = stylesheet_link_tag :application, :media => 'all'
    = csrf_meta_tags
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "black", :name => "apple-mobile-web-app-status-bar-style"}/
    %link{:href => image_url("favicon.ico", :rel => "icon")}/
    %link{:href => image_url("apple-touch-icon.png", :rel => "apple-touch-icon")}/
    %link{:href => image_url("apple-touch-icon-76x76.png", :rel => "apple-touch-icon", :sizes => "76x76")}/
    %link{:href => image_url("apple-touch-icon-120x120.png", :rel => "apple-touch-icon", :sizes => "120x120")}/
    %link{:href => image_url("apple-touch-icon-152x152.png", :rel => "apple-touch-icon", :sizes => "152x152")}/
  %body{:class => body_class, "data-language" => I18n.locale}
    = render 'google_analytics' if Hours.google_analytics_id
    = render 'navbar' if current_user
    = render 'flashes'
    = yield
    = render 'javascript'
