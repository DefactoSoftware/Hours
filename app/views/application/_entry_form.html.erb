<div class="new_entry_wrapper">
  <%= simple_form_for(@entry) do |f| %>
  <%= f.error_notification %>
      <%= f.association :project, required: true, collection: Project.by_name %>
      <%= f.association :category, required: true, collection: Category.by_name %>
      <%= f.input :hours, required: true %>
      <%= f.input :date, required: true, as: :string, input_html: { value: (@entry.date || Date.today).strftime("%d/%m/%Y"), id: "datepicker"} %>
      <%= f.input :tag_list, label: t('tags'), input_html: { data: { data: Tag.list } } %>
      <%= f.button :submit %>
  <% end %>
</div>
