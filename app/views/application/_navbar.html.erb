<div id="navbar">
  <div class="nav">
    <ul>
      <%= nav_path t("titles.projects.index"), root_path %>
      <%= nav_path t("titles.categories.index"), categories_path %>
      <%= nav_path t("titles.entries.index"), user_entries_path(current_user) %>
    </ul>
  </div>

  <div class="nav-user">
    <ul>
      <% if Hours.helpful_enabled? %>
        <li >
        <div class="modal">
          <label for="modal-1"><a>Help me!</a></label>
          <input class="modal-state" id="modal-1" type="checkbox">
          <%= render 'modal' %>
        </div>
        </li>
        <div class="divider"></div>
      <% end %>
      <li id="user-nav" class="dropdown">
        <a href="javascript:void(0)"><%= current_user.first_name %><span class="caret"></span></a>
        <div class="dropdown-menu">
          <div class="dropdown-arrow"></div>
          <div class="dropdown-content">
            <div class="user-info">
              <%= gravatar_image_tag(current_user.email, class: "avatar") %>
              <span class="user-name"><%= current_user.first_name %></span>
            </div>
            <ul>
              <li>
                <%= link_to t("navbar.dropdown.edit_user"), edit_user_registration_path(current_user) %>
              </li>
              <li class="devider"></li>
              <li>
              <a data-method="delete" href="/users/sign_out"><%= t("sign_out") %></a>
              </li>
            </ul>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>

